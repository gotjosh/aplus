= form_for @subject do |f|
  - if @errors
    #error_explanation
      %h2= "#{pluralize(@errors.count, "error")} prohibited this subject from being saved:"
      %ul
        - @errors.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.text_field :code, placeholder: "e.g. COM381, PS200"
  .field
    = f.label :name
    = f.text_field :name
  .field
    = label_tag "Color"
    %input{name: "subject_color", id: "subject_color", type: 'text', class: 'colorpicker', placeholder: "#ddd, #e8e8e8"}
    %span#preview
  .actions
    %a{href: "#{subjects_path}"} Cancel
    - if @url == new_subject_path
      = f.submit 'Create'
    - else
      = f.submit 'Save'
