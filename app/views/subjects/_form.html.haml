= form_for @subject do |f|
  - if @errors
    #error_explanation
      %h2= "#{pluralize(@errors.count, "error")} prohibited this subject from being saved:"
      %ul
        - @errors.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.text_field :code, placeholder: "e.g. COM381, PS200"
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :color
    = f.text_field :color, placeholder: "e.g. 000000, ddd", class: 'colorpicker'
    %span#preview
  .actions
    %a{href: "#{subjects_path}"} Cancel
    - if @url == new_subject_path
      = f.submit 'Create'
    - else
      = f.submit 'Save'
