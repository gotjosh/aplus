.topic-content
	.info
		%h4
			Info
		- if @topic.subject && @topic.subject.subject_configs.find_by(user_id: current_user.id)
			%p
				Subject:
				= link_to @topic.subject.name, @topic.subject
		%p= "# of cards: #{Integer(@topic.cards.count)}"

	.buttons
		- @topic_config.reviewing ? text = 'Reviewing' : text = "Review"
		= link_to text, topic_set_reviewing_path(@topic), method: :patch, class: "btn btn-default #{text.downcase}", id: 'review'
		- if @exist_cards_to_study
			= link_to 'Study', topic_review_path(@topic), class: 'btn btn-default', id: 'study'

.cards
	= render @topic.cards