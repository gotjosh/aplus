.cards
	.col-sm-6
		.card-container
			.side
				= text_area_tag(:back, @card.back, disabled: true)

	.col-sm-4
		.answer
			%p.bold Your answer:
			= form_tag(topic_card_answer_path, method: 'post') do
				= text_area_tag(:u_answer, (@u_answer != "") ? @u_answer : "No answer", disabled: true, class: 'form-control')
				= text_field_tag(:difference, @difference, style: 'display:none')

				.result 
					= submit_tag("Correct", id: "check", class: 'btn')
					= submit_tag("Incorrect", id: "wrong", class: 'btn')
